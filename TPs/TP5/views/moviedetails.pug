extends layout

block content
    nav
        #breadcrumb
            a(href='/') HOME
            span >
            a(href='/movies/1') ALL MOVIES
            span >
            p=movie.movietitle
        #title
            h1=title
    #detailsCont
        #detailsMain
            div.detailsDiv
                img(src="/images/"+movie.poster)
            div.detailsDiv
                h2=movie.movietitle
                p#director Director: #{movie.director}
                p#synopsis= movie.synopsis
                div#detailsbtn
                    #watchedBtn
                        p 
                            i.fas.fa-eye
                    #likeBtn
                        p
                            i.far.fa-heart