extends layout

block content
    nav
        #breadcrumb
            a(href='/') HOME
            span >
            a(href='/movies/1') ALL MOVIES
            span >
            p WATCHED
        #title
            h1=title
    #contWatched
        h2=title2
        #mainWatched
            #watcheddiv
                if(vistas.length>0)
                    each watched in vistas
                        figure.moviefig
                            img(src="/images/"+watched)
                            figcaption.movietitle=movietitle
                            a(href='/movies/m/'+movieid)
                                button.view-more View More
                else
                    h3 There are no movies watched yet.